Bootstrap: docker
From: ubuntu:18.04


%environment

    # export PATH=/usr/test:$PATH


%labels

   AUTHOR li32@ualberta.ca


%post

    apt-get update && apt-get -y install python3 git wget python3-pip
    mkdir /root/.ssh/
    touch /root/.ssh/known_hosts
    ssh-keygen -q -t rsa -N '' -f /root/.ssh/id_rsa
    ls /root/.ssh
    cat /root/.ssh/id_rsa
    ssh-keyscan github.com >> /root/.ssh/known_hosts
    chmod 0600 /root/.ssh/*
    git clone https://github.com/liyuxuan-academic/CraftingEnvBenchmark.git
    cd CraftingEnvBenchmark && pip3 install -e .
    pip3 install gym==0.21
    ls /
    ls /CraftingEnvBenchmark
    ls /CraftingEnvBenchmark/src


    
    
    
%runscript
    exec echo "Test singularity recipe!"
    exec python3 
